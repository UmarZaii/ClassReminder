<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lili">

    <EditText
        android:id="@+id/edtSubjectID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:hint="subjectID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtSubjectName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:hint="subjectName"
        android:layout_below="@+id/edtSubjectID"
        android:layout_alignLeft="@+id/edtSubjectID"
        android:layout_alignStart="@+id/edtSubjectID" />

    <Button
        android:id="@+id/btnAddSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ADD SUBJECT" />

</RelativeLayout>